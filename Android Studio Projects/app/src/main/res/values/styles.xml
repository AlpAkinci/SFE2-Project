<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Main Theme -->
    <style name="Theme.EmailOrginizerSFE2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- NoActionBar variant -->
    <style name="Theme.EmailOrginizerSFE2.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <!-- REQUIRED OVERLAY STYLES (were missing) -->
    <style name="Theme.EmailOrginizerSFE2.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>
    <style name="Theme.EmailOrginizerSFE2.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <!-- Your existing navigation styles -->
    <style name="NavigationMenuItemStyle">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:background">@drawable/ani_menu_item_bg</item>
    </style>

    <style name="AniNavigationMenuItemStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#868DDC</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>